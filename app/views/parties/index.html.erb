<section>
  <h1 class="text-center">
    Party List
  </h1>
</section>
<section>
    <table class="table table-striped">
      <thead>
        <tr>
          <td>Hosted By</td>
          <td>Host Email</td>
          <td># of Guests</td>
          <td>Guest Names</td>
          <td>Venue Name</td>
          <td>Venue Address</td>
          <td>Party Theme</td>
          <td>Party Start Time</td>
          <td>Party End Time</td>
          <td>Description</td>
        </tr>
      </thead>
      <tbody>
        <%= @parties.each do |party| %>
        <tr>
          <td>
            <% if party.host_name.blank? %>
              No host was found
            <% else %>
              <%= party.host_name %>
            <% end %>
          </td>
          <td>
            <%= party.host_email %>
          </td>
          <td><%= party.numgsts %></td>
          <td>
            <%= party.guest_names %>
            <!--<%= party.guest_names.split(',').compact.each do |g| %>
              <%= f,l=g.split(' ') %>
              <%= l %>, <%= f %>
            <% end %>-->
          </td>
          <td><%= party.venue %></td>
          <td><%= party.location %></td>
          <td><%= party.theme %></td>
          <td><%= party.when %></td>
          <td><%= party.when_its_over %></td>
          <td><%= party.descript %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
<div>
  <h4>
    <span class="text-center col-md-offset-5 btn btn-lg">
      <%= link_to "Create New Party",new_party_url %>
    </span>
  </h4>
</div>

<script type="javascript">
  $('.time').each(function() {$(this).value(moment($(this).value).format('MM/DD/YYYY h:mm a'));});
</script>
