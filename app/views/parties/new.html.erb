<h1 class="text-center">Add a Party</h1>
<%= form_for(@party) do |f| %>

  <div class="form-group col-lg-10">
    <label>Hosted By</label>
    <%= f.text_field :host_name, class: "form-control" %><br />
  </div>

  <div class="form-group col-lg-10">
    <label>Host Email</label>
    <%= f.text_field :host_email, class: "form-control" %><br />
  </div>

  <div class="form-group col-lg-10">
    <label>Number of Guests</label>
    <%= f.text_field :numgsts, class: "form-control" %><br />
  </div>

  <div class="form-group col-lg-10">
    <label>Guest Names (separate by ',')</label>
    <%= f.text_area :guest_names, class: "form-control" %><br />
  </div>

  <div class="form-group col-lg-10">
    <label>Venue Name</label>
    <%= f.text_field :venue, class: "form-control" %><br />
  </div>

  <div class="form-group col-lg-10">
    <label>Venue Location</label>
    <%= f.text_field :location, class: "form-control" %><br />
  </div>

  <div class="form-group col-lg-10">
    <label>Party Theme</label>
    <%= f.text_field :theme, class: "form-control" %><br />
  </div>

  <div class="form-group col-lg-10">
    <label>Party Start Time</label>
    <%= f.datetime_select :when, class: "form-control" %><br />
  </div>

  <div class="form-group col-lg-10">
    <label>Party End Time</label>
    <%= f.datetime_select :when_its_over, class: "form-control" %><br />
  </div>

  <div class="form-group col-lg-10">
    <label>Description</label>
    <%= f.text_area :descript, class: "form-control" %><br />
  </div>

  <div class="actions col-lg-10 text-center">
    <%= f.submit "Save Party", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>
